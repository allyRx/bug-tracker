pipeline {
    agent any

    stages {
        stage('Unit Test Backend') {
            agent{
                 script {
                    docker.image('snakee/golang-junit:1.21').inside {
                        dir('bugtracker-backend') {
                            sh 'go test -v ./...'
                        }
                    }
                }
            }
            steps {
                dir('bugtracker-backend'){
                    sh 'go test -V ./...'
                }
            }
        }
    }
}
